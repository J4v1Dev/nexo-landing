---
const { title, description, imageUrl, altText, inverted } = Astro.props;
---

<div class={`container ${inverted ? "inverted" : ""}`}>
    <div class="text-container">
        <h1>{title}</h1>
        <p>{description}</p>
    </div>
    <img
        src={imageUrl}
        alt={altText}
        class={`${inverted ? "img-border-inverted" : "img-border"}`}
    />
</div>

<style>
    .container {
        width: 100%;
        height: 300px;
        display: flex;
        justify-content: center;
        align-items: top;
        gap: 100px;
        margin-bottom: 100px;
    }

    .container.inverted {
        flex-direction: row-reverse;
    }

    .text-container {
        height: 100%;
        width: 30%;
        text-align: justify;
        color: #4b164c;

        & h1 {
            font-family: "Montserrat", sans-serif;
            font-size: 40px;
        }

        & p {
            font-size: 25px;
        }
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        width: 30%;
        height: 100%;
    }

    .img-border {
        border-radius: 0px 150px 0px 150px;
    }

    .img-border-inverted {
        border-radius: 150px 0px 150px 0px;
    }
</style>
