---
export interface Props {
    question: string;
    answer: string;
}

const { question, answer } = Astro.props;
---

<details class="faq-details" name="faq">
    <summary class="faq-summary">{question}</summary>
    <div class="divisory-line"></div>
    <div class="summary-content">
        <p>{answer}</p>
    </div>
</details>

<style>
    .faq-details {
        transition: height 1s ease allow-discrete;
        overflow: hidden;
        interpolate-size: allow-keywords;
        width: 60%;
        padding: 0.5rem;

        &::details-content {
            height: 0;
            transition:
                height 0.3s,
                content-visibility 0.3s;
            transition-behavior: allow-discrete;
        }

        &[open]::details-content {
            height: auto;
        }
    }

    .faq-details[open] .faq-summary::before {
        content: "-";
    }

    .divisory-line {
        border-top: 2px solid #b6b6b6;
        margin: 0.2rem 0;
        width: 95%;
        margin-left: 2.5%;
        border-radius: 100%;
    }

    .faq-summary {
        list-style: none;
        cursor: pointer;
        background-color: #4b164c;
        color: #ffff;
        padding: 10px;
        border-radius: 10px;
        font-weight: bold;
    }

    .faq-summary::before {
        content: "+";
        padding-right: 1rem;
        display: inline-block;
        width: 10px;
    }

    .summary-content {
        background-color: #fdd4f765;
        padding: 10px;
        border-radius: 10px;
        width: 95%;
        margin-left: 1.5%;
    }
</style>
