    }

    .footer-container .social {
        width: fit-content;
        height: fit-content;
        padding: 25px;

        & h4 {
            margin-top: 0;
        }
    }

    .footer-container .social .social-icons {
        display: flex;
        justify-content: center;
        gap: 20px;
    }
</style>
